                            <UniformGrid Columns="6" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="3">
                            <Grid Margin="0,10,0,10">
