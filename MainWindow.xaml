            --><!--<ScrollViewer  VerticalScrollBarVisibility="Auto">--><!--
            <ListBox Name="listHunderedPrice"  Grid.Row="0" Grid.Column="0" ItemsSource="{Binding UsersCq}" Background="WhiteSmoke">
                    <ListBox.ItemsPanel>
